<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nitha"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:text="Rainwater Harvesting Guide"
            android:textColor="#1E88E5"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Section 1: Introduction -->
        <TextView
            android:id="@+id/tvIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Rainwater harvesting is the practice of collecting and storing rainwater for reuse. It helps conserve water and reduce dependency on traditional water supply systems."
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Section 2: Benefits -->
        <TextView
            android:id="@+id/tvBenefitsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Benefits:"
            android:textColor="#388E3C"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBenefits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="• Conserves water\n• Reduces water bills\n• Reduces soil erosion and flooding\n• Promotes sustainable living"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Section 3: How to Do It -->
        <TextView
            android:id="@+id/tvHowToTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Steps to Implement:"
            android:textColor="#F57C00"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="1. Set up rooftop gutters to collect rainwater.\n2. Install a downpipe to direct water to a storage tank.\n3. Use filters to clean the water.\n4. Store in a clean tank or container.\n5. Use the water for gardening, flushing, or washing."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Button to Go Back -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Settings"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E88E5"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>
