<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewLearnMore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nitha"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn About Clean Water"
            android:textSize="33sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp" />

        <!-- Card 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="40dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Why Clean Water Matters"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1A237E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clean water is essential for health. Access to safe water helps prevent diseases and promotes hygiene."
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Card 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="40dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tip: Save Water Daily"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1B5E20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn off the tap while brushing your teeth and fix leaks. Small actions make a big difference."
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Card 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="40dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rainwater Harvesting"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#01579B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rainwater can be collected, stored, and reused. It's a sustainable solution for water scarcity."
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AboutUs"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />
    </LinearLayout>
</ScrollView>
